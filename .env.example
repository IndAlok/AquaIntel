# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# API Endpoints (for production use)
API_BASE_URL=https://api.aquaintel.gov.in
DWLR_API_URL=https://api.cgwb.gov.in/dwlr

# App Configuration
APP_ENV=development
DEBUG_MODE=true

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=false
ENABLE_ANALYTICS=false

# NWIC (National Water Informatics Centre) configuration
EXPO_PUBLIC_USE_REAL_DATA=false
EXPO_PUBLIC_NWIC_API_URL=https://nwdp.nwic.gov.in/api/action/datastore_search
EXPO_PUBLIC_NWIC_STATIONS_RESOURCE_ID=
EXPO_PUBLIC_NWIC_GW_LEVEL_TS_RESOURCE_ID=
EXPO_PUBLIC_NWIC_RAINFALL_RESOURCE_ID=
EXPO_PUBLIC_NWIC_WATER_QUALITY_RESOURCE_ID=
EXPO_PUBLIC_NWIC_STATE_STATS_RESOURCE_ID=
EXPO_PUBLIC_NWIC_DROUGHT_RESOURCE_ID=
EXPO_PUBLIC_NWIC_PREDICTION_RESOURCE_ID=SIMULATED

# Map Configuration (if using Google Maps with API key)
GOOGLE_MAPS_API_KEY=

# Google OAuth Configuration (for Google Sign-In)
# Get these from Google Cloud Console -> APIs & Services -> Credentials -> OAuth 2.0 Client IDs
# For Web: Create "Web application" client, add your domain to authorized JavaScript origins
# For Android: Create "Android" client, provide SHA-1 fingerprint and package name
# For iOS: Create "iOS" client, provide bundle ID
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_web_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_ios_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_android_client_id.apps.googleusercontent.com

# Additional Services
WEATHER_API_KEY=
RAINFALL_API_KEY=
