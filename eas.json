{
  "cli": {
    "version": ">= 5.2.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "ndk": {
          "abiFilters": ["arm64-v8a"]
        }
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "ndk": {
          "abiFilters": ["arm64-v8a"]
        }
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "ndk": {
          "abiFilters": ["arm64-v8a"]
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}
